@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<hr />
@if (User.Identity.IsAuthenticated)
{

    <h1>Hello Admin @User.Identity.Name!</h1>
    <div class="logout">
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log Out" />

        }
    </div>
    <div class="mailingBodyAdmin">
        <div class="mailingHeader">
            <h1>Mailing List</h1>
        </div>
        <div class="mailingList">

            @foreach(var user in ViewBag.MailingList)
            {
                <p><strong>Recipient:</strong> @user.Name | <strong>Email:</strong> @user.Email</p>

            }

        </div>
    </div>
}
else
{
    <h2>Welcome To Our Newsletter Signup! Here you will be able to sign up for the company newsletter</h2>

    @using (Html.BeginForm())
    {
        <h3>Mailing List Info</h3>
        <h4>Name</h4>
        @Html.TextBox("Name")
        <h4>Email</h4>
        @Html.TextBox("Email")

        <input type="submit" value="Mailing List Sign Up" />
    }
}